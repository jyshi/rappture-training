<?xml version="1.0"?>
<run>
    <tool>
        <title>Creating Tools - Assignment #3</title>
        <about>This simple tool adds or subtracts two integers and produces an integer value.</about>
        <command/>
        <version>
            <application>
                <directory id="tool">/home/nanohub/jyshi/ex3</directory>
            </application>
        </version>
        <name>Workspace</name>
    </tool>
    <input>
        <integer id="v1">
            <about>
                <label>Add this</label>
                <description>First value (v1) in the "v1 + v2" computation performed by this tool.</description>
            </about>
            <default>0</default>
            <current>0</current>
        </integer>
        <integer id="v2">
            <about>
                <label>To this</label>
                <description>Second value (v2) in the "v1 + v2" computation performed by this tool.</description>
            </about>
            <default>0</default>
            <current>0</current>
        </integer>
        <choice id="op">
            <about>
                <label>Operation</label>
                <description>Selects how the two numbers are combined to produce the result.</description>
            </about>
            <option id="1">
                <about>
                    <label>Add</label>
                    <description>Add the two numbers</description>
                </about>
            </option>
            <option id="2">
                <about>
                    <label>Subtract</label>
                    <description>Subtract the two numbers</description>
                </about>
            </option>
            <default>Add</default>
            <current>Add</current>
        </choice>
    </input>
    <output>
        <integer id="result">
            <about>
                <label>Result</label>
                <description>Result of adding or subtracting the two input values.</description>
            </about>
        </integer>
    </output>
</run>

