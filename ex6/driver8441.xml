<?xml version="1.0"?>
<run>
    <tool>
        <title>Spirograph Tool</title>
        <about>Spirograph Tool</about>
        <command>matlab -nodisplay -r infile='@driver',path('@tool',path),main</command>
        <version>
            <application>
                <directory id="tool">/home/nanohub/jyshi/hw6</directory>
            </application>
        </version>
        <name>Workspace</name>
    </tool>
    <input>
        <group id="parameters">
            <about>
                <label>Model parameters</label>
                <description>group of 3 num</description>
            </about>
            <number id="n1">
                <about>
                    <label>n1:</label>
                    <description>num #1</description>
                </about>
                <default>13</default>
                <current>13</current>
            </number>
            <number id="n2">
                <about>
                    <label>n2:</label>
                    <description>num #2</description>
                </about>
                <default>-7</default>
                <current>-7</current>
            </number>
            <number id="n3">
                <about>
                    <label>n3:</label>
                    <description>num #3</description>
                </about>
                <default>-3</default>
                <current>-3</current>
            </number>
        </group>
        <group id="value27">
            <about>
                <label>Comments</label>
                <description>the option for comment or not</description>
            </about>
            <boolean id="cmt">
                <about>
                    <label>Add comments:</label>
                    <description>Add comment or not</description>
                </about>
                <default>yes</default>
                <current>yes</current>
            </boolean>
            <string id="value31">
                <about>
                    <label>Comments:</label>
                    <description>display comments</description>
                    <enable>input.group(value27).boolean(cmt)</enable>
                </about>
                <default>Having fun with spirographs!</default>
                <current>Having fun with spirographs!</current>
            </string>
        </group>
    </input>
    <output>
        <curve id="spirograph">
            <about>
                <label>Spirograph</label>
                <description>the spirograph plot
</description>
            </about>
            <xaxis>
                <label>real(z)</label>
                <description>real part of z</description>
            </xaxis>
            <yaxis>
                <label>imag(z)</label>
                <description>imag part of z</description>
            </yaxis>
        </curve>
    </output>
</run>

